<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.macro.mall.dao.CmsPrefrenceAreaProductRelationDao">
    <resultMap id="prefrenceResultMap" type="com.macro.mall.model.CmsPrefrenceAreaProductRelation">
        <id property="id" column="id" />
        <result property="prefrenceAreaId" column="prefrence_area_id"/>
        <result property="productId" column="product_id"/>
    </resultMap>


    <insert id="insertList">
        insert into cms_prefrence_area_product_relation (prefrence_area_id, product_id) values
        <foreach collection="list" item="item" separator="," index="index">
            (#{item.prefrenceAreaId,jdbcType=BIGINT},
            #{item.productId,jdbcType=BIGINT})
        </foreach>
    </insert>

    <select id="selectById" resultMap="prefrenceResultMap">
        select * from cms_prefrence_area_product_relation where product_id=#{id}
    </select>
</mapper>